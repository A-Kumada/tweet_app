<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h6>プロフィール画像を編集</h6>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |user| %>
        
        <%= user.file_field :image, accept: "image/*" %>
          
        <div class="border">
          <div class="">名前</div>
          <%= user.text_field :name, style: "border: none" %>
        </div>
          
        <div class="border">
          <div class="">自己紹介</div>
          <%= user.text_field :profile, style: "border: none" %>
        </div>
          
        <div class="border">
          <div class="">生年月日</div>
          <%= user.date_select :birthday %>
        </div>
          
        <div class="border">
          <div class="">メールアドレス</div>
          <%= user.email_field :email, style: "border: none" %>
        </div>
          
        <%= user.submit "内容を保存する", class:"btn btn-success " %>
      <% end %>
       
    </div>
  </div>
</div>
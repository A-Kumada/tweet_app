<div class="container">
  <div class="row">

    <div class="col-md-6">
      <% if @user.image.attached? %>
        <%= image_tag @user.image, class: "profile-img" %>
      <% else %>
        <%= image_tag 'no_image.jpeg', class: "profile-img" %>
      <% end %>

      <%= @tweet.user.name %><br>
      <%= @tweet.content %><br>
      <%= @tweet.updated_at.strftime("%H:%M・%Y年%m月%d日") %>

      <%= form_with model: @comment, url: tweet_comments_path(tweet_id: @tweet) do |f| %>
      <%= f.text_area :tweet_comment, :size=>"50x3",:placeholder=>"返信をツイート" %>
      <div class="text-right">
        <%= f.submit "返信", class:"btn btn-primary rounded-pill" %>
      </div>
    <% end %>

    <% @tweet.comments.each do |comment| %>
    <div class="border">

      <% if current_user == comment.user %>
        <%= link_to "削除する",tweet_comment_path(comment.tweet, comment),method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %>

      <% if comment.user.image.attached? %>
        <%= image_tag comment.user.image, class: "profile-img" %>
      <% else %>
        <%= image_tag 'no_image.jpeg', class: "profile-img" %>
      <% end %>

      <%= link_to user_path(comment.user) do %>
      <%= comment.user.name %>
      <% end %><br>

      <%= comment.tweet_comment %><br>

      <span id="likes_buttons_<%= @tweet.id %>">
        <%= render partial: 'public/likes/like', locals: {tweet: @tweet} %>
      </span>

    </div>
    <% end %>
<%= paginate @tweets %>

    </div>
  </div>
</div>